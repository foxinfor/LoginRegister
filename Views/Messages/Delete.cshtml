@model LoginRegister.Models.Message

<h1>Удалить из избранного</h1>

<h3>Вы уверены, что хотите удалить товар из избранного?</h3>

<div>
    <dl class="row">
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" style="max-width: 200px; max-height: 200px;" />
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}