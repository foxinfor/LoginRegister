@model IEnumerable<LoginRegister.Models.Category>




<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
    <h1>Список категорий</h1>
    @if (User.IsInRole("Администратор"))
    {
        <a asp-action="Create" class="btn btn-success">Добавить категорию</a>
    }
</div>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    @if (User.IsInRole("Администратор"))
                    {
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Редактировать</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Удалить</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>