@model LoginRegister.Models.Category

<h1>Добавить категорию</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ParentId" class="control-label"></label>
        <select asp-for="ParentId" asp-items="ViewBag.Categories" class="form-control">
            <option value="">Выберите родительскую категорию</option>
        </select>
        <span asp-validation-for="ParentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}