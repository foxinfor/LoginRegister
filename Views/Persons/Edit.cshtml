@model UserModelView

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Изменить пользователя</h2>

        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@Model.Id">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Роль</label>
                <div class="col-sm-8">
                    @foreach (var role in new List<string> { "администратор", "клиент" })
                    {
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="selectedRole" value="@role"
                            @(Model.Role.Contains(role) ? "checked" : "") id="@role" />
                            <label class="form-check-label" for="@role">@role</label>
                        </div>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4 offset-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Изменить</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Persons" asp-action="Index" role="button">Закрыть</a>
                </div>
            </div>
        </form>
    </div>
</div>