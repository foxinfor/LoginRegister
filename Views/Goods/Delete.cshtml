@model LoginRegister.Models.Goods

<h1>Удалить товар</h1>

<h3>Вы уверены, что хотите удалить товар '@Model.Name'?</h3>

<div>
    <h4>Детали товара</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Количество</dt>
        <dd class="col-sm-10">@Model.Count</dd>
        <dt class="col-sm-2">Изображение</dt>
        <dd class="col-sm-10"><img src="@Model.ImageSrc" alt="@Model.Name" style="max-width: 200px; max-height: 200px;" /></dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}